{
  "description": "Pattern mattching, ADTs for Typescript",
  "repository": "https://github.com/Dule12/adtts.git",
  "author": "Dusan Svitlica dsvitlica@gmail.com",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "ADT",
    "Algebraic data types",
    "Discriminated union",
    "Functional programming",
    "Pattern matching",
    "Match expression",
    "Sum types",
    "Tagged unions",
    "TypeScript",
    "Collections",
    "Option",
    "Typesafe",
    "Monad"
  ],
  "scripts": {
    "format": "prettier --write -l packages/**/src/** -l packages/**/test/**",
    "lint": "eslint --fix packages/**/src/**/*.ts",
    "test": "mocha -r ts-node/register -p tsconfig.json packages/**/test/**/*.ts",
    "coverage": "nyc report --reporter text",
    "build": "lerna run build",
    "watch": "lerna run watch --parallel",
    "start": "lerna run build && lerna run start",
    "all": "yarn && yarn format && yarn lint && yarn test && yarn coverage && yarn build"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "cross-env": "^6.0.3",
    "cross-var": "^1.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "lerna": "^3.20.1",
    "mocha": "^6.2.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4",    
    "chai": "^4.2.0",
    "doc": "^0.0.3",
    "mocha": "^6.2.2",
    "typedoc": "^0.15.6"
  }
}
